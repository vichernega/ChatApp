<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/small_normal_margin"
    android:layout_marginBottom="@dimen/small_normal_margin"
    android:maxWidth="300dp"
    android:paddingBottom="3dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/sender_message_bg">

    <TextView
        android:id="@+id/sender_full_name"
        style="@style/MessageSmallText"
        tools:text="Victoria Cherneha"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/text"
        style="@style/MessageText"
        android:maxWidth="300dp"
        android:textColor="@color/colorGrey"
        tools:text="vsdvvfvfnfkvnlkxnvlknvzlvdvnjdk jsdjkd vdsj djhgdg dgfdg dfbfd fdfdb dfdfg dfd dffd dsjhv vsdjh dsjhg sdjh"
        app:layout_constraintTop_toBottomOf="@id/sender_full_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/time"
        style="@style/MessageSmallText"
        tools:text="12/12/12"
        android:paddingEnd="@dimen/message_horizontal_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    
    
    <!--BUTTON-->
    <style name="ButtonGeneral">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">@dimen/btn_corner</item>
        <item name="backgroundTint">@color/colorBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>

    </style>

    
    <!--TEXT STYLE-->
    <style name="BlueText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="HeadingTextBold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="NormalLightText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/colorSilver</item>
    </style>

    <style name="NormalText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SmallLightText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorSilver</item>
    </style>

    <style name="MiddleText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/normal_middle_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MessageText" parent="NormalText">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>
        <item name="android:paddingStart">@dimen/message_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/message_vertical_padding</item>
    </style>

    <style name="MessageSmallText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/message_small_text</item>
        <item name="android:textColor">@color/colorSilver</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingEnd">@dimen/message_vertical_padding</item>
        <item name="android:paddingStart">@dimen/message_horizontal_padding</item>
    </style>
    
    
    <!--EDIT TEXT STYLE-->
    
    <style name="RegisterEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/et_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/et_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/et_corner</item>
        <item name="boxCornerRadiusTopStart">@dimen/et_corner</item>
        <item name="android:layout_marginStart">@dimen/side_normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/side_normal_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="boxStrokeColor">@color/colorBlue</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="errorEnabled">true</item>

    </style>

    <!-- IMAGE -->

    <style name="MessageImage">
        <item name="android:layout_height">260dp</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>
        <item name="android:paddingEnd">@dimen/normal_margin</item>
        <item name="android:paddingStart">@dimen/normal_margin</item>
        <item name="android:paddingTop">@dimen/message_vertical_padding</item>
        <item name="android:visibility">gone</item>
        <item name="android:scaleType">centerInside</item>
    </style>



    <!--SEPARATOR-->

    <style name="Separator">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorSilver</item>
    </style>

    <!-- PROGRESS BAR-->
    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/colorBlue</item>
    </style>

</resources>